<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:orientation="vertical"
                                                   android:id="@+id/sensorLayout">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/sensorUUID" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:text="8863bd37-efd5-4dce-8ba8-2de2077d6d59" android:fontFamily="sans-serif-medium"
            android:textSize="18dp" android:textColor="@android:color/black"
            app:layout_constraintHorizontal_bias="0.49"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensorID" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/sensorUUID" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium" tools:text="android.something.gps" android:textSize="22dp"
            android:textColor="@android:color/black" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Activate"
            android:layout_height="45dp"
            android:id="@+id/sensorActivate"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp" android:padding="0dp" android:layout_margin="0dp"
            android:background="@android:color/holo_red_dark"/>
    <TextView
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:id="@+id/sensorType"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/sensorID"
            tools:text="integer" android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:textAlignment="textStart" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensorTypeTag"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/sensorID"
            android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/tertiary_text_light"
            android:layout_marginStart="104dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="textStart" android:text="type:"/>
    <TextView
            android:layout_width="167dp"
            android:layout_height="0dp"
            android:id="@+id/sensorUnit"
            tools:text="natural" android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/sensorType"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/sensorUnitTag"
            android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/tertiary_text_light"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/sensorTypeTag"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="104dp"
            android:textAlignment="textStart" android:text="unit:"/>
    <TextView
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:id="@+id/sensorWhat"
            tools:text="something" android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/sensorUnit"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/sensorWhatTag"
            android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/tertiary_text_light"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/sensorUnitTag"
            android:layout_marginStart="104dp" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart" android:text="what:"/>
    <TextView
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:id="@+id/sensorDevice"
            tools:text="GPS" android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/sensorWhat"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/sensorDeviceTag"
            android:textSize="16dp" android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/tertiary_text_light"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/sensorWhatTag"
            android:layout_marginStart="104dp" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart" android:text="device:"/>
</androidx.constraintlayout.widget.ConstraintLayout>

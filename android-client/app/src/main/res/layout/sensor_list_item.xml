<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/sensorListItemLayout"
                                                   android:background="@android:color/white"
                                                   android:layout_marginBottom="2dp" android:layout_marginLeft="0dp"
                                                   android:layout_marginRight="0dp" android:layout_marginTop="2dp">
    <ImageView
            android:layout_width="31dp"
            android:layout_height="42dp" app:srcCompat="@drawable/red_circle"
            android:id="@+id/sensorActive" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" tools:srcCompat="@drawable/red_circle"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintVertical_bias="0.473" android:background="@android:color/white"
    />
    <TextView
            android:text="TextView"
            android:layout_width="303dp"
            android:layout_height="38dp" android:id="@+id/sensorUUID"
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="textStart"
            tools:text="8863bd37-efd5-4dce-8ba8-2de2077d6d59" android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.867"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/sensorID" tools:text="android.something.gps"
            android:textSize="24sp" android:textColor="@android:color/black" android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sensorUUID" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/sensorActive" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.156" android:textAlignment="textStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>

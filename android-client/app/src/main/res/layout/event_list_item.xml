<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/eventListItemLayout"
                                                   android:layout_marginBottom="2dp" android:layout_marginLeft="8dp"
                                                   android:layout_marginRight="8dp" android:layout_marginTop="2dp"
                                                   android:background="@android:color/white">

    <TextView
            android:layout_width="77dp"
            android:ems="10"
            android:id="@+id/eventId"
            android:layout_height="71dp" android:clickable="false"
            android:focusableInTouchMode="false" android:focusedByDefault="false" android:enabled="false"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:importantForAutofill="no" android:textSize="28sp"
            tools:text="123"
            android:textColor="@android:color/black" android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.347" android:gravity="center_vertical"/>
    <TextView
            android:layout_width="317dp"
            android:layout_height="41dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/eventDate"
            android:clickable="false"
            android:cursorVisible="false" android:focusedByDefault="false" android:focusableInTouchMode="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/eventId"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:textSize="18sp" android:textAlignment="center" android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium" tools:text="3 Jun 2008 11:05:30" android:gravity="center_vertical"
            android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/eventResourceId"
            android:cursorVisible="false"
            android:clickable="false" android:focusableInTouchMode="false" android:focusedByDefault="false"
            android:textAlignment="center"
            android:textSize="18sp" android:fontFamily="sans-serif-medium" tools:text="1" android:gravity="center"
            android:textColor="@android:color/tertiary_text_light"
            app:layout_constraintStart_toEndOf="@+id/eventAction"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eventDate"/>
    <TextView
            android:layout_width="121dp"
            android:layout_height="45dp"
            android:id="@+id/eventResource"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/eventDate"
            android:textAlignment="center" android:textSize="18sp"
            android:textColor="@android:color/tertiary_text_light" android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium" tools:text="iota"
            app:layout_constraintStart_toStartOf="@+id/eventDate"/>
    <TextView
            android:layout_width="114dp"
            android:layout_height="45dp"
            android:id="@+id/eventAction"
            android:gravity="center"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/eventResource"
            android:textAlignment="center" android:textSize="18sp"
            android:textColor="@android:color/tertiary_text_light"
            android:fontFamily="sans-serif-medium" tools:text="broadcast" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eventDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>

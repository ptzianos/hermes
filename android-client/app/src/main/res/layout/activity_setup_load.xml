<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SetupLoadActivity" android:id="@+id/coordinatorLayout">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:id="@+id/setupProgressBar" android:layout_marginEnd="411dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="80dp" app:layout_constraintHorizontal_bias="0.005"
            app:layout_constraintVertical_bias="0.517"/>
    <TextView
            android:layout_width="255dp"
            android:layout_height="89dp"
            android:id="@+id/setupLoaderMessage" tools:text="Message to user"
            android:textAlignment="center" android:fontFamily="@font/roboto_bold" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/setupProgressBar"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.075" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
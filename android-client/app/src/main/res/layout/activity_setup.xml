<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.hermes.activities.SetupActivity">

    <Button
            android:text="@string/setupButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setup_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setup_verify_pin_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setup_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            tools:text="@string/app_name"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/setup_pin_input"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setup_title"
            app:layout_constraintBottom_toTopOf="@+id/setup_verify_pin_input"
            android:layout_marginTop="8dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/setup_verify_pin_input"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setup_pin_input"
            app:layout_constraintBottom_toTopOf="@+id/setup_button"/>

    <TextView
            android:text="PIN:"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/pin_text"
            tools:text="PIN:"
            app:layout_constraintEnd_toStartOf="@+id/setup_pin_input"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setup_title"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/setup_verify_pin_input"/>

    <TextView
            android:text="Repeat PIN:"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/verify_pin_text"
            tools:text="Repeat PIN:"
            app:layout_constraintEnd_toStartOf="@+id/setup_verify_pin_input"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setup_pin_input"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/setup_button"/>

</android.support.constraint.ConstraintLayout>
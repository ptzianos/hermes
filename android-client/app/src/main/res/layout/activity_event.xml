<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:id="@+id/eventLayout"
              android:background="@color/dividerColor">
    <include layout="@layout/toolbar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:id="@+id/constraintLayout"
    >
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/eventActionCard">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="lorem ipsum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/eventExtraInfo"
                        android:fontFamily="@font/roboto_condensed_regular" android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" android:padding="10dp" android:textIsSelectable="true"/>
                <View
                        android:id="@+id/divider13"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/eventExtraInfoLabel"/>
                <TextView
                        android:text="Extra Info"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp" android:id="@+id/eventExtraInfoLabel"
                        android:fontFamily="@font/roboto_condensed_regular" android:textSize="16sp"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="220dp"
                android:layout_height="91dp"
                app:layout_constraintTop_toBottomOf="@+id/eventDateCard"
                android:id="@+id/eventResourceCard"
                app:layout_constraintStart_toEndOf="@+id/eventResourceIdCard" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="291dp"
                        android:layout_height="47dp"
                        android:id="@+id/eventResource" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
                        android:fontFamily="@font/roboto_condensed_bold" tools:text="IOTA"
                        android:textAlignment="center"/>
                <View
                        android:id="@+id/divider10"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/eventResource"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Event Resource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/eventResourceLabel"
                        app:layout_constraintTop_toBottomOf="@+id/divider10" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textSize="16sp"
                        android:fontFamily="@font/roboto_condensed_regular" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="91dp"
                app:layout_constraintTop_toBottomOf="@+id/eventIdCard"
                android:id="@+id/eventResourceIdCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="TextView"
                        android:layout_width="291dp"
                        android:layout_height="47dp"
                        android:id="@+id/eventResourceId" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
                        android:fontFamily="@font/roboto_condensed_bold" tools:text="10"
                        android:textAlignment="center"/>
                <View
                        android:id="@+id/divider11"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/eventResourceId"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Event Resource ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/eventResourceIdLabel"
                        app:layout_constraintTop_toBottomOf="@+id/divider11" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textSize="16sp"
                        android:fontFamily="@font/roboto_condensed_regular" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="263dp"
                android:layout_height="91dp"
                android:id="@+id/eventDateCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eventIdCard" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="TextView"
                        android:layout_width="291dp"
                        android:layout_height="29dp"
                        android:id="@+id/eventDate" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_condensed_bold" tools:text="Wed, 26 Jun 2019 13:38:50 +0200"
                        android:textAlignment="center" android:lines="2"/>
                <View
                        android:id="@+id/divider9"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@+id/eventDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Event Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/eventDateLabel"
                        app:layout_constraintTop_toBottomOf="@+id/divider9" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textSize="16sp"
                        android:fontFamily="@font/roboto_condensed_regular" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="105dp"
                android:layout_height="91dp"
                android:id="@+id/eventIdCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="TextView"
                        android:layout_width="291dp"
                        android:layout_height="47dp"
                        android:id="@+id/eventId" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
                        android:fontFamily="@font/roboto_condensed_bold" tools:text="10"
                        android:textAlignment="center" android:layout_marginEnd="8dp"/>
                <View
                        android:id="@+id/divider8"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/eventId" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Event ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/eventIdLabel"
                        app:layout_constraintTop_toBottomOf="@+id/divider8" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textSize="16sp"
                        android:fontFamily="@font/roboto_condensed_regular" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="397dp"
                android:layout_height="91dp"
                app:layout_constraintTop_toBottomOf="@+id/eventResourceIdCard"
                android:id="@+id/eventActionCard"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="TextView"
                        android:layout_width="291dp"
                        android:layout_height="47dp"
                        android:id="@+id/eventAction" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
                        android:fontFamily="@font/roboto_condensed_bold" tools:text="some action done"
                        android:textAlignment="center"/>
                <View
                        android:id="@+id/divider12"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/eventAction"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Event Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/eventActionLabel"
                        app:layout_constraintTop_toBottomOf="@+id/divider12" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textSize="16sp"
                        android:fontFamily="@font/roboto_condensed_regular" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

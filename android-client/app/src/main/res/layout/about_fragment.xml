<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/constraintLayout2">

    <TextView
            android:text="Hermes Application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto_condensed_bold" android:textSize="30sp"/>
    <TextView
            android:text="v0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto_condensed_bold" android:textSize="20sp"/>
    <TextView
            android:text="Welcome to the Hermes Application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="52dp" android:fontFamily="@font/roboto" android:textSize="20sp"/>
    <TextView
            android:text="This appliciation allows you to make data from sensors on your phone public and sell them through the Hermes Marketplace. Please be aware that whatever data becomes public, it is public FOREVER"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="76dp" app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            android:layout_marginEnd="32dp" android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

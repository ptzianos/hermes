<resources>

    <style name="HermesAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HermesAppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="HermesAppTheme.Toolbar.Title" parent="">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/iconsColor</item>
    </style>
    <style name="HermesAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="HermesAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="HermesAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
